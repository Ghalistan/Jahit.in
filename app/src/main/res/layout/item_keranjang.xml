<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            
            <ImageView
                android:id="@+id/iv_keranjang"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/tv_nama_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="14sp"
                android:textColor="#424242"
                android:text="Kemeja Motif Kotak"
                android:layout_toRightOf="@id/iv_keranjang"/>

            <TextView
                android:id="@+id/tv_harga_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_keranjang"
                android:layout_alignParentBottom="true"
                android:text="Rp 120.000"/>

            <Button
                android:id="@+id/btn_hapus_keranjang"
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:background="@drawable/trash"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_minus_keranjang"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@id/tv_jumlah_keranjang"
                    android:background="@drawable/minus"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:id="@+id/tv_jumlah_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:layout_toStartOf="@id/btn_plus_keranjang"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="1"
                    android:layout_marginRight="16dp"/>

                <Button
                    android:id="@+id/btn_plus_keranjang"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/plus"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>