<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_transaksi_penjualan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="14dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/iv_icon_transaksi_penjualan"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/status"/>

                <TextView
                    android:id="@+id/tv_status_transaksi_penjualan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/iv_icon_transaksi_penjualan"
                    android:text="Menunggu Pembayaran"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7fb3b3b3"
                android:layout_marginBottom="16dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/iv_icon_bank_transaksi_penjualan"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/mandiri"/>

                <TextView
                    android:id="@+id/tv_norek_transaksi_penjualan"
                    style="@style/noRek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_icon_bank_transaksi_penjualan"
                    android:layout_marginEnd="16dp"
                    android:text="123 123 1234567"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a/n PT. Jahit.in Cabang Dayeuhkolot"
                android:layout_marginBottom="12dp"/>

            <TextView
                style="@style/konfirmasi2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Jumlah yang Harus Dibayar :"
                android:layout_marginBottom="10dp"/>

            <TextView
                style="@style/nominal"
                android:id="@+id/tv_jumlah_bayar_transaksi_penjualan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 451.000"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>