<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bayar2.xml -->
    <style name="konf_toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>
    <style name="konfirmasi">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>
    <style name="konfirmasiTanggal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>
    <style name="konfirmasi2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>
    <style name="noRek">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">@font/robotobold</item>
    </style>
    <style name="namRek">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>
    <style name="nominal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:fontFamily">@font/robotobold</item>
    </style>
    <style name="buktipay">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>
    <style name="buktiadd">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>
    <style name="StatButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#f44336</item>
        <item name="android:lineSpacingExtra">-6sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
