    <style name="noRek">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">@font/robotobold</item>
    </style>

    <style name="nominal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:fontFamily">@font/robotobold</item>
    </style>

    <style name="buktipay">
        <item name="android:textSize">14sp</item>
