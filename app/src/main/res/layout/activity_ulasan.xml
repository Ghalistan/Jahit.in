<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ulasan_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/rate_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating dan ulasan produk"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:textColor="#424242"
            android:layout_marginTop="12dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <ImageView
                android:id="@+id/star_0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star3"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageView
                android:id="@+id/star_1"
                android:layout_toRightOf="@id/star_0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/star_2"
                android:layout_toRightOf="@id/star_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/star_3"
                android:layout_toRightOf="@id/star_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/star_4"
                android:layout_toRightOf="@id/star_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="16dp"/>
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="40dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/orange_border_editext"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="Ulasan..."
                android:padding="12dp"/>
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/button_kirim_ulasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_button_radius"
            android:foreground="?attr/selectableItemBackground"
            android:textAllCaps="false"
            android:text="Kirim Ulasan"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"/>
    </LinearLayout>
</LinearLayout>