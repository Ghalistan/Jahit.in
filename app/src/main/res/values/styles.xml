        <item name="android:textColor">#f44336</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="StatButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#f44336</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- fragment_beranda.xml -->
    <style name="HeaderBeranda">
        <item name="android:background">#EFEFEF</item>
        <item name="android:textColor">#BFBFBF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- item_toko.xml -->
    <style name="NamaToko">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingToko">
