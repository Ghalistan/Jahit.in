<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/PesanButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Jenis Pakaian -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/jpakaian_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            style="@style/konfirmasi2"
                            android:id="@+id/tvJenis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="11dp"
                            android:text="@string/jenis_pakaian"/>
                        <RelativeLayout
                            android:id="@+id/jenis_expand_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_keyboard_arrow_down_24dp"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentEnd="false"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:id="@+id/jenis_expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ael_expanded="false"
                            app:ael_duration="500"
                            app:ael_interpolator="fastOutLinearIn"
                            app:ael_orientation="vertical"
                            android:paddingBottom="14dp">
                            <RelativeLayout
                                android:id="@+id/Kaos_pcustom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kaos"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 20.000"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/Kemeja_pcustom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/Kaos_pcustom"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kemeja"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rp 20.000"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/Polo_pcustom"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_below="@id/Kemeja_pcustom"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Polo"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:text="Rp 20.000"/>
                            </RelativeLayout>
                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Jenis Kelamin -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            style="@style/konfirmasi2"
                            android:id="@+id/tvGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="11dp"
                            android:text="@string/jenis_pakaian" />
                        <RelativeLayout
                            android:id="@+id/gender_expand_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_keyboard_arrow_down_24dp"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentEnd="false"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:id="@+id/gender_expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ael_expanded="false"
                            app:ael_duration="500"
                            app:ael_interpolator="fastOutLinearIn"
                            app:ael_orientation="vertical"
                            android:paddingBottom="14dp">
                            <RelativeLayout
                                android:id="@+id/male_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Laki-Laki"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/female_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_below="@id/male_gender"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Perempuan"/>
                            </RelativeLayout>
                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--Jenis Kain -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/jkain_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            style="@style/konfirmasi2"
                            android:id="@+id/tvKain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="11dp"
                            android:text="Jenis Kain"/>
                        <RelativeLayout
                            android:id="@+id/kain_expand_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_keyboard_arrow_down_24dp"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentEnd="false"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:id="@+id/kain_expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ael_expanded="false"
                            app:ael_duration="500"
                            app:ael_interpolator="fastOutLinearIn"
                            app:ael_orientation="vertical"
                            android:paddingBottom="14dp">
                            <RelativeLayout
                                android:id="@+id/katun_kain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Katun"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 20.000"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/spandex_kain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_below="@id/katun_kain"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Spandex"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 20.000"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Warna -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/warna_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            style="@style/konfirmasi2"
                            android:id="@+id/tvWarna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="11dp"
                            android:text="Warna"/>
                        <RelativeLayout
                            android:id="@+id/warna_expand_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_keyboard_arrow_down_24dp"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentEnd="false"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:id="@+id/warna_expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ael_expanded="false"
                            app:ael_duration="500"
                            app:ael_interpolator="fastOutLinearIn"
                            app:ael_orientation="vertical"
                            android:paddingBottom="14dp">
                            <RelativeLayout
                                android:id="@+id/merah_warna"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Merah"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 5.000"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/biru_warna"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_below="@id/merah_warna"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">
                                <TextView
                                    style="@style/isi_pcustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Biru"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 5.000"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Pesan Bayar -->
    <Button
        style="@style/StatButton"
        android:id="@+id/PesanButton"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Pesan"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>