<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/infotoko_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Informasi Toko"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100">
            <ImageView
                android:id="@+id/foto_toko"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="80"
                android:src="@drawable/toko_1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_margin="17dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Toko"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="14sp"
                    android:textColor="#424242"/>
                <TextView
                    android:id="@+id/alamat_toko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alamat"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="14sp"
                    android:textColor="#a7a7a7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/tv_noTelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="081263207999"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="14sp"
                        android:textColor="#a7a7a7"/>

                    <TextView
                        android:id="@+id/tv_hub_toko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="13sp"
                        android:textColor="@color/colorAccent"
                        android:text="Hubungi"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistik Toko"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="14sp"
                    android:textColor="#424242"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.2"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="#424242"/>
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/star_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="8dp"/>
                        <ImageView
                            android:id="@+id/star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="8dp"/>
                        <ImageView
                            android:id="@+id/star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="8dp"/>
                        <ImageView
                            android:id="@+id/star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="8dp"/>
                        <ImageView
                            android:id="@+id/star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="8dp"/>
                    </LinearLayout>
                </RelativeLayout>

                //Ulasan header
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ulasan"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="14sp"
                        android:textColor="#424242"/>
                    <TextView
                        android:id="@+id/lainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lainnya"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="14sp"
                        android:textColor="#f44335"/>
                </RelativeLayout>

                //Ulansan data
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                            <LinearLayout
                                android:id="@+id/tabheader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <ImageView
                                    android:id="@+id/foto_user"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/akun2grey"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pembeli"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="8sp"
                                    android:textColor="#007bc3"/>
                                <TextView
                                    android:id="@+id/tanggal_ulasan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="16 Februari 2018"
                                    android:textSize="8sp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_below="@id/tabheader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/nama_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gagah Ghalistan"
                                    android:fontFamily="@font/robotoregular"
                                    android:textSize="12sp"
                                    android:textColor="#424242"/>
                                <TextView
                                    android:id="@+id/isi_ulasan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pakaiannya yang dipesan sudah sampai"
                                    android:fontFamily="@font/robotoregular"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                            <LinearLayout
                                android:id="@+id/tabheader2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <ImageView
                                    android:id="@+id/foto_user2"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/akun2grey"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pembeli"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="8sp"
                                    android:textColor="#007bc3"/>
                                <TextView
                                    android:id="@+id/tanggal_ulasan2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="16 Februari 2018"
                                    android:textSize="8sp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_below="@id/tabheader2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/nama_user2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ryo Alif Ramadhan"
                                    android:fontFamily="@font/robotoregular"
                                    android:textSize="12sp"
                                    android:textColor="#424242"/>
                                <TextView
                                    android:id="@+id/isi_ulasan2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kualitas pakaian bagus banget"
                                    android:fontFamily="@font/robotoregular"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>