<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/Bayar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Alamat -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/konfirmasi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Pengiriman"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"/>
                    <TextView
                        style="@style/poppinsregular14sp"
                        android:id="@+id/bayar_alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_alamat"
                        android:textColor="#a7a7a7"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="14dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Cara Pembayaran -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/cara_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            style="@style/konfirmasi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Cara_pembayaran"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"/>
                        <RelativeLayout
                            android:id="@+id/cara_expand_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_keyboard_arrow_down_24dp"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentEnd="false"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:id="@+id/cara_expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ael_expanded="false"
                            app:ael_duration="500"
                            app:ael_interpolator="fastOutLinearIn"
                            app:ael_orientation="vertical"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:paddingBottom="14dp">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/cara_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Kurir Pengiriman -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/kurir_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            style="@style/konfirmasi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kurir_pengiriman"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="11dp"/>
                        <RelativeLayout
                            android:id="@+id/kurir_expand_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_keyboard_arrow_down_24dp"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentEnd="false"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:id="@+id/kurir_expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ael_expanded="false"
                            app:ael_duration="500"
                            app:ael_interpolator="fastOutLinearIn"
                            app:ael_orientation="vertical"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:paddingBottom="14dp">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/kurir_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Ringkasan Belanja -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/konfirmasi2"
                        android:id="@+id/ringkasan_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Pengiriman"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"/>
                    <TextView
                        android:id="@+id/harga_barang"
                        android:layout_below="@id/ringkasan_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Barang"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:id="@+id/harga_kurir"
                        android:layout_below="@id/harga_barang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Kurir"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:id="@+id/total_harga"
                        android:layout_below="@id/harga_kurir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="14dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Button Bayar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/StatButton"
            android:id="@+id/BayarButton"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Bayar"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>