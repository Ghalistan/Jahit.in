<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/dtransaksi_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            //Menunggu Pembayaran
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="17dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp">
                    <RelativeLayout
                        android:id="@+id/status_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/status_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/status"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>
                        <LinearLayout
                            android:layout_toRightOf="@id/status_image"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="17dp">
                            <TextView
                                android:id="@+id/detail_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Menunggu Pembayaran"
                                android:fontFamily="@font/poppinsmedium"
                                android:textSize="16sp"
                                android:textColor="#424242"/>
                        </LinearLayout>

                        <TextView
                            android:layout_below="@id/status_image"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#7fb3b3b3"
                            android:layout_marginTop="8dp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_below="@id/status_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Pemesanan"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginTop="17dp"/>
                        <TextView
                            android:id="@+id/detail_tanggal_pemesanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 Oktober 2018"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#a7a7a7"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cara Pembayaran"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginTop="17dp"/>
                        <TextView
                            android:id="@+id/detail_cara_pembayaran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trf Bank Mandiri"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#a7a7a7"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kurir Pengiriman"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginTop="17dp"/>
                        <TextView
                            android:id="@+id/detail_kurir_pengiriman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIKI Reguler"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#a7a7a7"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat Pengiriman"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginTop="17dp"/>
                        <TextView
                            android:id="@+id/detail_alamat_pengiriman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/alamat"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#a7a7a7"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            //Detil barang
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:id="@+id/gambar_1"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/gambar_1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/nama_barang"
                            android:layout_toRightOf="@id/gambar_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kemeja Motif Kotak"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginLeft="12dp"/>
                        <RelativeLayout
                            android:layout_toRightOf="@id/gambar_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="12dp">
                            <TextView
                                android:id="@+id/harga_barang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 120.000"
                                android:fontFamily="@font/poppinsmedium"
                                android:textSize="14sp"
                                android:textColor="#f44336"/>
                            <TextView
                                android:id="@+id/quantity_barang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="2"
                                android:fontFamily="@font/poppinsmedium"
                                android:textSize="16sp"
                                android:textColor="#707070"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="10dp">
                        <ImageView
                            android:id="@+id/gambar_2"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/pakaian_custom"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/nama_barang2"
                            android:layout_toRightOf="@id/gambar_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pakaian Custom"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginLeft="12dp"/>
                        <RelativeLayout
                            android:layout_toRightOf="@id/gambar_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="12dp">
                            <TextView
                                android:id="@+id/harga_barang2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 200.000"
                                android:fontFamily="@font/poppinsmedium"
                                android:textSize="14sp"
                                android:textColor="#f44336"/>
                            <TextView
                                android:id="@+id/quantity_barang2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="1"
                                android:fontFamily="@font/poppinsmedium"
                                android:textSize="16sp"
                                android:textColor="#707070"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            //Ringkasan Belanja
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringkasan Belanja"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="14sp"
                        android:textColor="#707070"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga Barang"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="14sp"
                            android:textColor="#a7a7a7"/>
                        <TextView
                            android:id="@+id/total_harga_barang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp 440.000"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#f44336"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga Kurir"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="14sp"
                            android:textColor="#a7a7a7"/>
                        <TextView
                            android:id="@+id/harga_kurir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp 11.000"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#f44336"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Harga"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#707070"/>
                        <TextView
                            android:id="@+id/total_harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp 451.000"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#f44336"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            //Tanya Penjual
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_border"
                android:textAllCaps="false"
                android:text="Tanya Penjual"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16sp"
                android:textColor="#f44336"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17dp"/>

            //Selesai
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_button_radius"
                android:textAllCaps="false"
                android:text="Selesai"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>