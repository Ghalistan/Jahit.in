<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detail_barang"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/foto_barang"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/gambar_2"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Barang"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="#424242"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Baju Kaos have body fit"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp"
                            android:textColor="#424242"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/bahan_judul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bahan : "/>
                            <TextView
                                android:id="@+id/tvBahan"
                                android:layout_toRightOf="@id/bahan_judul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Katun"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/ukuran_judul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ukuran : "/>
                            <TextView
                                android:id="@+id/tvSize"
                                android:layout_toRightOf="@id/ukuran_judul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Size"/>
                            <TextView
                                android:id="@+id/tvHarga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="Rp 120.000"
                                android:fontFamily="@font/poppinssemibold"
                                android:textSize="16sp"
                                android:textColor="#f44336"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="17dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Catatan Penjual"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="14sp"
                            android:textColor="#424242"/>
                        <TextView
                            android:id="@+id/tvCatatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/contoh_catatan"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>