<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.form">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Akun fragment -->
    <style name="Akun_nama">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="DDPengguna">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <!-- Login -->
    <style name="form_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#a4a4a4</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="form_input">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
    </style>

    <style name="Register_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <!-- pakaian custom -->
    <style name="isi_pcustom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#a7a7a7</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="est_biaya">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <!-- Bayar2.xml -->
    <style name="konf_toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="konfirmasi">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="poppinsregular14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="konfirmasi2">
        <item name="android:textSize">14sp</item>
